.checkout-ok
    height 100vh
    display flex
    
    &__section
        padding-top 20px
        padding-bottom 20px
        margin auto
        text-align center

    &__title
        font-size 72px
        font-weight 400
        color #A79186    
        line-height 1.1
        text-transform uppercase
        margin-bottom 20px

        @media (max-width 1023)
            font-size 55px

        @media (max-width 639px)
            font-size 35px

    &__info
        font-size 14px
        color #A79186    
        font-weight 400
        line-height 1.1
        width 440px
        max-width 100%
        margin 0 auto 20px

    &__payment
        font-size 13px
        color #A79186    
        font-weight 400
        line-height 1.1
        width 440px
        max-width 100%
        margin 0 auto 60px

        @media (max-width 639px)
            margin-bottom 30px

    &__note
        font-size 14px
        color #333    
        font-weight 400
        line-height 1.1

    &__link
        font-weight normal
        font-size 14px
        line-height 17px
        text-decoration underline
        color #6E031F    
        &:hover
            text-decoration none