.shares
    flex none
    padding-top 120px
    padding-bottom 100px
    background-color #F6F4F3

    @media (max-width 1024px)
        padding-top 50px
        padding-bottom 50px

    &__head
        text-align center
        margin-bottom 50px

        @media (max-width 767px)
            margin-bottom 30px

        h2
            font-size 48px
            color #333
            font-weight normal
            line-height 1.1
            margin-top 0
            margin-bottom 60px

            @media (max-width 767px)
                font-size 38px
                margin-bottom 30px

    &__inputs
        display flex
        justify-content center
        margin-left -25px

        @media (max-width 767px)
            margin-left -15px

        @media (max-width 639px)
            flex-wrap wrap    
    
    &__input
        padding-left 25px    

        @media (max-width 767px)
            padding-left 15px

        @media (max-width 639px)
            margin-bottom 15px    

    &__items
        display flex

        .splide__arrow
            background-image url("data:image/svg+xml,%3Csvg width='14' height='26' viewBox='0 0 14 26' fill='none' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath d='M13 1L1 13L13 25' stroke='%236E031F' stroke-linecap='round'/%3E%3C/svg%3E%0A")
            background-repeat no-repeat
            background-color transparent
            background-size contain

            &:disabled
                // opacity .3
                // cursor default
                display none

        .splide__arrow--prev
            left -40px
            margin-top -80px

            @media (max-width 1279px)
                left 0

            @media (max-width 479px)
                left -10px    

        .splide__arrow--next
            transform rotate(180deg) translateY(50%)  
            right -40px    
            margin-top -80px

            @media (max-width 1279px)
                right 0

            @media (max-width 479px)
                right -10px

    &__slider-track
        padding-bottom 50px    

    &__item
        display flex    
        justify-content center

        .lot-thumb
            &__body
                box-shadow none