.cart

    &__items-title
        display flex
        border-bottom 1px solid #D2D2CA
        padding-bottom 20px

    &__item-title
        font-size 14px
        color #1B110F    
        font-weight 400
        line-height 1.1
        
        &:nth-child(1)
            flex 0 0 110px
            margin-right 35px

        &:nth-child(2)
            flex 0 0 280px
            margin-right 50px

        &:nth-child(3)
            flex 0 0 95px
            margin-right 30px   

        &:nth-child(4)
            flex 0 0 200px
            margin-right 30px

        &:nth-child(5)
            flex 0 0 270px
            margin-right 30px

        &:nth-child(6)
            flex 0 0 10px

    &__items
        margin-bottom 40px    

    &__item
        padding-top 25px
        padding-bottom 25px
        border-bottom 1px solid #D2D2CA
    
    &__body
        display flex
        align-items center
    
    &__img
        flex 0 0 110px
        margin-right 35px

        &--extra
            padding 25px
            border 2px solid #A79186
    
    &__img-link
        display block
        box-shadow 10px 10px 50px rgba(143, 210, 243, 0.2)

        img 
            display inline-block
            vertical-align top

    &__info-product
        flex 0 0 280px
        margin-right 50px

    &__name-product
        font-size 16px
        color #333   
        font-weight 400
        line-height 1.2
        text-decoration none
        display block
        transition color .3s
        &:hover
            color #6e031f

    &__options-product
        font-size 14px
        color #A79186
        font-weight 400
        line-height 1.3
        margin-top 10px

        span 
            display block

    &__price-product
        flex 0 0 95px
        margin-right 30px     

    &__current-price
        font-size 18px
        color #333
        font-weight 400
        line-height 1.1
        display block

    &__old-price
        font-size 14px
        color #D2D2CA
        font-weight 400
        line-height 1.1
        text-decoration line-through
        margin-top 5px
        display block

    &__amount
        flex 0 0 200px
        margin-right 30px

        &--extra
            flex 0 0 100px

        .amount
            width 100px
            height 40px

            &__btn-amount
                flex 0 0 35px
                width 35px
                max-width 35px
                height 35px

            input
                flex 0 0 30px
                width 30px
                max-width 35px
                height 30px    

    &__total-product
        flex 0 0 270px
        margin-right 30px

    &__remove-product
        flex 0 0 15px
        background none
        border none
        padding 15px
        cursor pointer

        .svg-icon--close
            width 15px
            height 15px
            fill #6e031f

    &__items-extra

        & ^[0]

            &__body
                padding-top 25px      

    &__btn-append
        font-size 11px
        padding-top 13px
        padding-bottom 13px            
        min-width 240px