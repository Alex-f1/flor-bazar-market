.cart

    &__empty
        padding-top 25px
        border-top 1px solid #D2D2CA
        display none
        
        span 
            font-size 25px
            color #a79186
            width 400
            line-height 1.1
            text-transform uppercase
            display block
            margin-bottom 15px

        a
            font-size 16px
            color #6E031F
            font-weight 400
            line-height 1.1
            text-decoration underline
            &:hover
                text-decoration none

    &__items-title
        display flex
        border-bottom 1px solid #D2D2CA
        padding-bottom 20px

        @media (max-width 1023px)
            display none

    &__item-title
        font-size 14px
        color #1B110F    
        font-weight 400
        line-height 1.1
        
        &:nth-child(1)
            flex 0 0 110px
            width 110px
            max-width 110px
            margin-right 35px

        &:nth-child(2)
            flex 0 0 280px
            width 280px
            max-width 280px
            margin-right 50px

        &:nth-child(3)
            flex 0 0 95px
            width 95px
            max-width 95px
            margin-right 30px   

        &:nth-child(4)
            flex 0 0 230px
            width 230px
            max-width 230px
            margin-right 30px

            @media (max-width 1279px)
                flex 0 0 150px
                width 150px
                max-width 150px
                

        &:nth-child(5)
            flex 0 0 270px
            width 270px
            max-width 270px
            margin-right 30px

            @media (max-width 1279px)
                flex 0 0 150px
                width 150px
                max-width 150px

        &:nth-child(6)
            flex 0 0 10px
            width 10px
            max-width 10px

    &__items
        margin-bottom 40px    
        display flex
        flex-wrap wrap

        @media (max-width 767px)
            display block

    &__item
        padding-top 25px
        padding-bottom 25px
        border-bottom 1px solid #D2D2CA

        @media (max-width 1023px)
            margin-bottom 15px
            padding 25px
            border 1px solid #D2D2CA

        @media (max-width 767px)
            margin-right 0 !important    
    
    &__body
        display flex
        align-items center

        @media (max-width 1023px)
            flex-wrap wrap

        @media (max-width 479px)
            align-items flex-start

    &__img
        flex 0 0 110px
        width 110px
        max-width 110px
        margin-right 35px

        @media (max-width 1023px)
            margin-right 15px

        &--extra
            padding 25px
            border 2px solid #A79186
            margin-right 35px !important

            @media (max-width 959px)
                margin-right 0 !important 
                margin-bottom 15px

    &__img-link
        display block
        box-shadow 10px 10px 50px rgba(143, 210, 243, 0.2)

        img 
            display inline-block
            vertical-align top

    &__info-product
        flex 0 0 280px
        width 280px
        max-width 280px
        margin-right 50px

        @media (max-width 1023px)
            margin-right 0
            margin-bottom 15px

        @media (max-width 640px)
            flex 0 0 230px
            width 230px
            max-width 230px

        @media (max-width 440px)
            flex 0 0 110px
            width 110px
            max-width 110px

    &__name-product
        font-size 16px
        color #333   
        font-weight 400
        line-height 1.2
        text-decoration none
        display block
        transition color .3s
        &:hover
            color #6e031f

        @media (max-width 440px)
            font-size 13px    

    &__options-product
        font-size 14px
        color #A79186
        font-weight 400
        line-height 1.3
        margin-top 10px

        @media (max-width 440px)
            font-size 11px  

        span 
            display block

    &__wrp-info
        display flex
        align-items center

        @media (max-width 1023px)
            align-items flex-start
            margin-top 15px

        @media (max-width 440px)
            align-items center
            flex-wrap wrap
            justify-content space-between    

    &__item-title-mob
        font-size 14px
        color #1B110F    
        font-weight 400
        line-height 1.1
        display none

        @media (max-width 1023px)
            display block 
            margin-bottom 5px       

    &__price-product
        flex 0 0 95px
        width 95px
        max-width 95px
        margin-right 30px     

        @media (max-width 1023px)
            margin-right 0

        @media (max-width 440px)
            margin-bottom 15px

    &__current-price
        font-size 18px
        color #333
        font-weight 400
        line-height 1.1
        display block

    &__old-price
        font-size 14px
        color #D2D2CA
        font-weight 400
        line-height 1.1
        text-decoration line-through
        margin-top 5px
        display block

    &__amount
        flex 0 0 230px
        width 230px
        max-width 230px
        margin-right 30px
        
        @media (max-width 1279px)
            flex 0 0 150px
            width 150px
            max-width 150px

        @media (max-width 1023px)
            margin-right 0
            margin-bottom 15px    

        @media (max-width 480px)
            flex 0 0 130px
            width 130px
            max-width 130px

        &--extra
            flex 0 0 160px
            width 160px
            max-width 160px

            @media (max-width 959px)
                flex 0 0 50px
                width 50px
                max-width 50px

        .amount
            width 100px
            height 40px

            @media (max-width 405px)
                margin-left auto

            &__btn-amount
                flex 0 0 35px
                width 35px
                max-width 35px
                height 35px

            input
                flex 0 0 30px
                width 30px
                max-width 35px
                height 30px    

    &__total-product
        flex 0 0 240px
        width 240px
        max-width 240px
        margin-right 30px

        @media (max-width 1279px)
            flex 0 0 150px
            width 150px
            max-width 150px
            margin-right 0

        @media (max-width 640px)
            flex 0 0 100px
            width 100px
            max-width 100px

    &__remove-product
        flex 0 0 15px
        width 15px
        max-width 15px
        background none
        border none
        padding 15px
        cursor pointer

        .svg-icon--close
            width 15px
            height 15px
            fill #6e031f

            @media (max-width 1023px)
                display none

        .svg-icon--trash-alt-regular
            display none
            fill #6e031f

            @media (max-width 1023px)
                display block    

        @media (max-width 1023px)
            padding 0        

    &__items-extra
        margin-bottom 40px

        & ^[0]

            &__body
                display flex
                padding-top 25px      

                @media (max-width 959px)
                    display block

            &__info-product
                flex 0 0 285px
                width 285px
                max-width 285px    

    &__btn-append
        font-size 11px
        padding-top 13px
        padding-bottom 13px            
        min-width auto
        width 240px
        max-width 100%

    &__total
        display flex
        justify-content space-between
        padding 45px 40px 45px 30px
        background-color #F6F6F4

        @media (max-width 767px)
            display block

        @media (max-width 479px)
            padding 20px    

    &__sum-total

        @media (max-width 767px)
            margin-top 35px

        & ^[0]

            &__current-price
                font-size 24px

            &__old-price
                font-size 18px    
                margin-left 8px

    &__sum-total-price    
        display flex
        align-items center
        margin-bottom 25px      

    &__sum-total-name
        font-size 14px
        color #b4b1af    
        font-weight 400
        line-height 1.1
        margin-right 10px  

    &__btn-checkout
        min-width 330px

        @media (max-width 479px)
            min-width auto
            width 100%

        @media (max-width 440px)
            font-size 12px
            padding-right 40px
            padding-left 20px    

.promo-code

    &__title
        font-size 13px
        color #1B110F
        font-weight 400
        line-height 1.1
        margin-bottom 10px

    &__input
        width 290px
        max-width 100%    
        display flex

    &__btn-promo
        min-width 47px
        padding 10px 18px
        display flex
        align-items center
        &:after
            display none

        .svg-icon--check-icon
            width 12px
            height 12px
            fill none

    &__info
        margin-top 30px        

    &__name
        font-size 14px
        color #b4b1af
        font-weight 400
        line-height 1.1

    &__price
        font-size 14px
        color #1B110F    
        font-weight 400
        line-height 1.1
        margin-left 10px    