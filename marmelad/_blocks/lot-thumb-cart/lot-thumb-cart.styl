.lot-thumb-cart
    margin-bottom 15px

    &:last-child
        margin-bottom 0

    &__body
        display flex
        justify-content space-between

    &__info
        display flex    

    &__img
        flex 0 0 70px
        width 70px
        max-width 70px
        height 65px
        display block
        box-shadow 10px 10px 50px rgba(143, 210, 243, 0.2)
        margin-right 15px

        img 
            display inline-block
            vertical-align top


    &__name
        font-size 13px
        color #333
        font-weight normal
        line-height 1.2
        text-decoration none
        width 150px
        max-width 100%
        display block
        margin-bottom 10px
        transition color .3s
        &:hover
            color #6e031f    

    &__current-price
        font-size 16px
        color #1B110F
        font-weight 400
        line-height 1.1

    &__old-prace
        font-size 13px
        color #D2D2CA
        font-weight 400
        line-height 1.1
        text-decoration line-through
        margin-left 5px    

    &__handling
        display flex
        flex-direction column
        justify-content space-between     
        position relative    

    &__btn-close
        width 12px
        height 12px
        padding 0
        display block
        border none
        background-color transparent
        cursor pointer
        position absolute
        top 0
        right 0

        .svg-icon
            width 12px
            height 12px
            fill #d2d2ca
            display block

    .amount
        width 50px
        margin-top auto

        &__btn-amount
            flex 0 0 15px
            width 15px
            max-width 15px

        input 
            flex 0 0 18px
            width 18px
            max-width 18px
            font-size 13px