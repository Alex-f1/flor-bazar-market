.catalog-main
    flex none
    
    &__section
        padding-top 120px
        padding-bottom 105px

        @media (max-width 1279px)
            padding-top 50px
            padding-bottom 50px

    &__items
        width 1075px
        max-width 100%
        display flex
        flex-wrap wrap
        margin 0 auto

        @media (max-width 1279px)
            margin 0 0 0 -15px
            width auto
            max-width none

        @media (max-width 767px)
            display block    
            margin-right -15px

    &__item
        flex 0 0 50%
        width 50%
        max-width 50%
        padding-left 15px    
        margin-bottom 15px
        &:hover
            img 
                transform scale(1.1)

        @media (max-width 767px)
            width 100%
            max-width 100%        
            padding-left 0

    &__body
        position relative

    &__img
        overflow hidden
        img 
            display inline-block
            vertical-align top    
            transition transform 1.5s

            @media (max-width 767px)
                width 100%
                height 100%
                object-fit cover

    &__btn-link
        position absolute
        bottom 30px        
        left 30px

        @media (max-width 767px)
            bottom 15px
            left 15px
            min-width 270px
            max-width 270px

        &--color1
            color #333
            background-color #d2d2ca
            &:hover
                background-color lighten(#d2d2ca, 15%)

            &:after
                background-image url("data:image/svg+xml,%3Csvg width='10' height='18' viewBox='0 0 10 18' fill='none' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath d='M1 17L9 9L1 1' stroke='%23333333'/%3E%3C/svg%3E%0A")

        &--color2
            background-color #663D37
            &:hover
                background-color lighten(#663D37, 15%)       

        &--color3
            color #333
            background-color #A79186
            &:hover
                background-color lighten(#A79186, 15%)

