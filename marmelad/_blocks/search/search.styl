.search

    @media (min-width 1025px)
        margin-left auto

    &__input
        display flex
        align-items center
        width 195px
        max-width 100%
        border-bottom 1px solid #D2D2CA

        input
            font-size 11px
            color #000
            font-weight 400
            line-height 13px
            width 100%
            height 20px
            border 0
            padding 0
            background-color transparent
            outline none

        ::placeholder
            font-size 11px
            color #D2D2CA
            font-weight 400   

    &__btn-search
        width 15px
        height 15px
        display block
        padding 0
        background-color transparent
        border none
