.subscribe-popup 

    &__section
    
        &.success
            display none

    &__title
        font-size 24px
        color #333      
        font-weight 400
        line-height 1.1
        text-transform uppercase
        margin-bottom 20px

    &__group
        margin-bottom 25px    
        &:last-child
            margin-bottom 0

    &__name
        font-size 18px
        color #1B110F    
        font-weight 400
        line-height 1.3
        margin-bottom 15px

    &__input
        margin-bottom 15px

        input    
            outline none

    &__textarea        
        margin-top 40px
        textarea
            outline none
            max-width 100%

    &__btn-send
        min-width auto
        width 100% 
        margin-top 30px       
        transition opacity .3s

        &:disabled
            opacity .5
            cursor not-allowed
            &:hover
                background-color #6E031F


.popup-success
    color #333
    display none

    @media (max-width 639px)
        padding 15px

    &__title
        font-size 24px
        font-weight 400
        line-height 1.1
        margin-bottom 20px
        text-transform uppercase

    &__desc
        font-size 18px
        font-weight 400
        line-height 1.1
        display block        
        margin-bottom 30px

    &__btn-ok
        min-width auto
        width 100%    