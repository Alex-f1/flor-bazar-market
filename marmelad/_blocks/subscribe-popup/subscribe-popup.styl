.subscribe-popup 

    &__section
    
        &.success
            display none

    &__title
        font-size 24px
        color #333      
        font-weight 400
        line-height 1.1
        text-transform uppercase
        margin-bottom 20px

    &__group
        margin-bottom 25px    
        &:last-child
            margin-bottom 0

    &__name
        font-size 18px
        color #1B110F    
        font-weight 400
        line-height 1.3
        margin-bottom 15px

    &__input
        margin-bottom 15px

        input    
            outline none

    &__textarea        
        margin-top 40px
        textarea
            outline none
            max-width 100%

    &__btn-send
        min-width auto
        width 100% 
        margin-top 30px       

.popup-success
    padding 50px
    color #fff
    background-color #6E031F
    text-align center
    display none

    @media (max-width 639px)
        padding 15px

    &__desc
        font-size 20px
        font-weight 400

        span 
            line-height 16px
            width 230px
            display block
            margin 0 auto 15px

        strong 
            font-size 24px
            font-weight 400
            line-height 1.1
            display block        