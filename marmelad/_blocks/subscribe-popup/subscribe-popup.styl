.subscribe-popup 

    &__section
    
        &.success
            display none

    &__title
        font-size 24px
        color #333      
        font-weight 400
        line-height 1.1
        text-transform uppercase
        margin-bottom 20px

    &__group
        margin-bottom 25px    
        &:last-child
            margin-bottom 0

    &__name
        font-size 18px
        color #1B110F    
        font-weight 400
        line-height 1.3
        margin-bottom 15px

    &__input
        margin-bottom 15px   

        input[type=text],
        input[type=email]
            font-size 14px
            color #333
            font-weight 400
            line-height 1.1
            width 100%
            height 25px
            padding 0
            border none
            border-bottom 1px solid #A79186    
            outline none

        ::placeholder
            font-size 14px
            color #A79186
            font-weight 400
            line-height 1.1    

    &__textarea        
        margin-top 40px

        textarea
            font-size 14px
            color #333
            font-weight 400
            line-height 1.1
            padding 12px
            border 1px solid #A79186    
            width 100%
            max-width 100%
            min-height 80px    
            outline none

    &__btn-send
        min-width auto
        width 100% 
        margin-top 30px       
        transition opacity .3s

        &:disabled
            opacity .5
            cursor not-allowed
            &:hover
                background-color #6E031F


.popup-success
    color #333
    display none

    @media (max-width 639px)
        padding 15px

    &__title
        font-size 24px
        font-weight 400
        line-height 1.1
        margin-bottom 20px
        text-transform uppercase

    &__desc
        font-size 18px
        font-weight 400
        line-height 1.1
        display block        
        margin-bottom 30px

    &__btn-ok
        min-width auto
        width 100%    