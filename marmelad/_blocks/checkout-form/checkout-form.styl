.checkout-form
    overflow hidden

    .label-elem-interface

        &--anonym
            margin-top 15px

    &__section  
        display flex
        justify-content space-between

        @media (max-width 767px)
            display block

    &__form
        width 600px
        max-width 100%

        @media (max-width 1023px)
            width 480px

        @media (max-width 959px)    
            width 360px

        @media (max-width 767px)
            width 100%    

    &__input
        margin-bottom 15px

    &__name
        font-size 13px
        color #1B110F
        font-weight 400
        line-height 1.1
        margin-bottom 15px

    &__note
        font-size 13px
        color #A79186        
        font-weight 400
        line-height 1.1
        display block
        padding-left 30px
        margin-left 0   

    &__bottom
        margin-top 50px

    &__btn-checkout
        margin-top 25px    

    &__btn-your-order
        display flex
        flex-direction column
        justify-content center
        align-items center
        width 50px
        height 50px
        padding 0
        position fixed
        right 15px
        bottom 15px
        background-color #fff
        border none
        border-radius 50px
        z-index 10
        box-shadow 0px -2px 20px 0px rgba(0,0,0,0.1)
        cursor pointer
        transition bottom .3s

        &.position-bottom
            bottom 80px

        .svg-icon--completed-icon
            fill none
            stroke #000 !important