.hero
    @media (max-width 1024px)
        margin-top 60px

    &__section
        height 800px
        position relative

        @media (max-width 1439px)
            height 555px

        @media (max-width 1024px)
            height 450px    

        @media (max-width 767px)    
            height 350px

    &__items,
    &__slider-track,
    &__slider-list
        height 100%

    &__items
        .splide__arrow
            top 21%
            transform none
            background-image url("data:image/svg+xml,%3Csvg width='14' height='26' viewBox='0 0 14 26' fill='none' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath d='M1 25L13 13L1 1' stroke='white' stroke-linecap='round'/%3E%3C/svg%3E%0A")
            background-repeat no-repeat
            background-color transparent
            background-size contain
            
            @media (max-width 1439px)
                top 50%

        .splide__arrow--prev
            left 3%
            transform rotate(180deg)

            @media (max-width 1439px)
                left 0

        .splide__arrow--next
            right 3%

            @media (max-width 1439px)
                right 0

    &__item
        background-size cover
        background-position 50% 0
        background-repeat no-repeat    
        display flex
        flex-direction column
        justify-content space-between
        padding-top 140px
        padding-bottom 185px
        background-color #000

        @media (max-width 1439px)
            padding-top 100px
            padding-bottom 150px

        @media (max-width 1024px)
            padding-top 75px
            padding-bottom 75px    
            position relative

        @media (max-width 767px)
            padding-top 50px
            padding-bottom 50px    

        &:before
            content ''
            position absolute
            top 0
            left 0
            width 100%
            height 100%
            background-color rgba(0, 0, 0, .5)    
            display none

            @media (max-width 1024px)
                display block

    &__item
        height 100%    
    
    &__top,
    &__bottom

        @media (max-width 1439px)
            padding-left 50px

        @media (max-width 639px)
            padding-left 40px    

    &__content
        width 410px
        max-width 100%
        color #fff
        position relative
        z-index 5

    &__title
        font-size 72px    
        color #fff
        font-weight 400
        line-height 1.1
        margin-top 0
        margin-bottom 25px

        @media (max-width 1024px)
            font-size 45px

        @media (max-width 639px)
            font-size 35px    

    &__desc    
        font-size 18px
        color #FFF
        font-weight 400
        line-height 1.4

        @media (max-width 1024px)
            font-size 16px
    
    &__btn-link

        @media (max-width 639px)  
            min-width 240px
            max-width 240px