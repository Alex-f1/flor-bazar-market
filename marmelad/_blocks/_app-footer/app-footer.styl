.app-footer
    flex none
    background-color rgba(210, 210, 202, .1)
    
    &--inner-page
        margin-top 65px

        @media (max-width 1024px)
            margin-top 50px

    .logo

        @media (max-width 959px)
            margin 0 auto 30px
            text-align center

    .social-links
        @media (max-width 959px)
            margin-bottom 30px        

    &__section
        padding-top 60px
        padding-bottom 70px

        @media (max-width 1024px)
            padding-top 50px
            padding-bottom 50px

    &__cols
        display flex    

        @media (max-width 959px)
            flex-direction column
            justify-content center
            align-items center
    
    &__col

        &:nth-child(2)
            margin-left 95px
            margin-right 95px

            @media (max-width 1024px)
                margin-right 50px
                margin-left 50px

            @media (max-width 959px)
                display none    

        &:last-child
            margin-left auto

            @media (max-width 959px)
                margin 0

    &__info
        height 100%
        display flex
        flex-direction column
        justify-content space-between
        
        @media (max-width 959px)
            display block

    &__additional-link
        font-size 11px
        color #333   
        font-weight bold
        line-height 1.1
        text-transform uppercase
        text-decoration none
        display flex
        align-items center     

        &--phone

            @media (min-width 1025px)
                pointer-events none

        .svg-icon
            margin-right 15px     

.footer-menu
    display flex             

    @media (max-width 959px)
        display none

    &__nav
        margin-right 80px
        &:last-child
            margin-right 0

        ul
            list-style-type none
            padding-left 0
            margin 0

            li
                margin-bottom 20px
                padding-left 0
                position static
                &:before
                    display none

                &:last-child
                    margin-bottom 0

                a
                    font-size 14px
                    color #333
                    font-weight 400
                    line-height 1.1
                    text-transform uppercase
                    text-decoration none
                    &:hover
                        text-decoration underline