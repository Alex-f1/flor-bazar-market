.subscribe

    &__section  
        height 420px
        background-position 50% 0
        background-repeat no-repeat
        background-size cover

        @media (max-width 1024px)
            height 300px

        @media (max-width 639px)
            height 200px    

    &__content
        color #FFF   
        width 470px
        max-width 100%  
        height 100% 
        padding 100px 40px 80px 40px
        margin-left auto
        display flex
        flex-direction column
        justify-content space-between    
        background-color rgba(0, 0, 0, .4)

        @media (max-width 1024px)
            padding-top 50px
            padding-bottom 50px

        @media (max-width 767px)
            width 100%    

        @media (max-width 639px)
            padding 15px 25px    

    &__title
        font-size 36px
        font-weight 400
        line-height 1.1
        margin-top 0
        margin-bottom 10px

        @media (max-width 639px)
            font-size 30px

    &__desc
        font-size 16px
        font-weight 400
        line-height 1.1    