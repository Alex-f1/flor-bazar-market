.main-menu
    margin-left auto

    @media (max-width 1279px)
        padding-left 25px
        margin 0 0 0 -25px

    &__nav
        
        ul
            list-style-type none
            display flex
            align-items center
            padding-left 0
            margin 0

            li
                flex 0 0 auto
                &:hover
                    > a
                        color #fff
                        background-color #A79186
                a
                    font-size 11px
                    color #333
                    font-weight 400
                    line-height 1.1
                    text-transform uppercase
                    text-decoration none   
                    padding 13px 12px
                    transition color .3s, background-color .3s
                    display block
                    &:hover
                        color #fff
                        background-color #A79186

                &.has-level
                    &:hover
                        .menu-level-wrp
                            opacity 1
                            visibility visible

                    &.has-level--category

                        li
                            margin-bottom 2px !important
                            &:first-child
                                margin-bottom 10px !important
                                a
                                    text-transform uppercase
                            a
                                text-transform none 

                        .menu-level-list
                            width 180px        
                                
                    .menu-level-wrp
                        opacity 0
                        visibility hidden
                        position absolute
                        z-index 5
                        width 100%
                        height 530px
                        padding-top 30px
                        padding-bottom 55px
                        background-color #fff
                        top 110px
                        left 0
                        overflow-y auto
                        transition opacity .3s, ease .5s

                    .menu-level-inner
                        width 1075px
                        max-width 100%
                        position relative
                        display flex
                        margin 0 auto

                    .menu-level-cols-2
                        .menu-level-img 
                            width 550px
                            max-width 100%

                    .menu-level-cols-more
                        .menu-level-img 
                            width 350px
                            max-width 100%     

                    .menu-level-list
                        display block
                        padding-top 20px
                        width 230px
                        max-width 100%

                        li
                            margin-bottom 15px
                            &:hover
                                .menu-level-img
                                    opacity 1
                                    visibility visible

                                a
                                    color #A79186
                                    background-color transparent   
                            a   
                                font-size 14px
                                padding 0
                                display inline-block
                                &:hover
                                    background-color transparent
                                    color #A79186

                    .menu-level-img
                        position absolute
                        top 0
                        right 0
                        display flex      
                        flex-wrap wrap  
                        opacity 0
                        visibility hidden
                        transition opacity .3s, ease .3s

                        span 
                            margin-right 15px
                            margin-bottom 0
                            display block
                            &:last-child
                                margin-right 0
                                margin-bottom 0

                            img 
                                display inline-block
                                vertical-align top    