.cart-mini
    border-left 1px solid #F2F2F2   

    &__btn-cart
        color #000
        text-decoration none
        width 30px
        height 40px
        padding 0
        display flex
        align-items center
        background-color transparent
        border none
        cursor pointer
        position relative
        outline none !important
        margin-left 25px

    &__count-prudacts
        font-size 10px
        font-weight bold
        line-height 1.8
        text-align center
        width 16px
        height 16px
        display block
        position absolute
        top 0
        right 0
        background-color #D2D2CA
        border-radius 50%

    &__items
        width 390px
        padding 40px
        background-color #fff
        position absolute
        top 71px
        right 0
        z-index 10