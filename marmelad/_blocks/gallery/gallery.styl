.gallery
    flex none
    padding-top 95px
    padding-bottom 95px
    background-color #663d37

    @media (max-width 1024px)
        padding-top 50px
        padding-bottom 50px

    &__inner
        display flex

        @media (max-width 1279px)
            display block
    
    &__head
        margin-right 105px
        display flex
        flex-direction column
        justify-content space-around

        @media (max-width 1279px)
            text-align center
            display block
            margin-right 0
            margin-bottom 25px

    &__title
        font-size 36px
        color #FFF  
        font-weight 400
        line-height 1.1
        margin-top 0
        margin-bottom 10px

    &__btn-sign-up
        display block    
        min-width 210px
        
        @media (max-width 1279px)
            display none

        &--color
            color #333
            background-color #d2d2ca
            &:hover
                background-color lighten(#d2d2ca, 15%)

            &:after
                background-image url("data:image/svg+xml,%3Csvg width='10' height='18' viewBox='0 0 10 18' fill='none' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath d='M1 17L9 9L1 1' stroke='%23333333'/%3E%3C/svg%3E%0A")

        &.btn-mobile
            display none

            @media (max-width 1279px)
                display inline-block !important

    &__desc
        font-size 13px
        color #FFFFFF    
        font-weight 400
        line-height 1.2
        width 150px
        max-width 100%

        @media (max-width 1279px)
            width 100%

    &__items
        width 815px
        max-width 100%    

        @media (max-width 1279px)
            margin 0 auto

        @media (max-width 959px)
            width 680px    

        @media (max-width 767px)
            width 100%

        .splide__arrow
            background-image url("data:image/svg+xml,%3Csvg width='14' height='26' viewBox='0 0 14 26' fill='none' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath d='M1 25L13 13L1 1' stroke='white' stroke-linecap='round'/%3E%3C/svg%3E%0A")
            background-repeat no-repeat
            background-color transparent
            background-size contain
            
            &:disabled
                opacity .3
                cursor default

        .splide__arrow--prev
            left -55px
            transform rotate(180deg) translateY(50%)  

            @media (max-width 959px)
                left 0

            @media (max-width 767px)
                left -15px    

        .splide__arrow--next
            right -40px    

            @media (max-width 959px)
                right 0

            @media (max-width 767px)
                right -15px    

    &__item
        color #fff
        text-decoration none
        display flex
        &:hover

            & ^[0]

                &__bottom
                    background-color #6e031f

        span 
            display block

        @media (max-width 959px)
            justify-content center    

    &__body
        display flex
        flex-direction column    

    &__img
        overflow hidden

        img
            display inline-block
            vertical-align top   

    &__bottom
        padding 15px        
        background-color #1B110F
        transition background-color .3s
        position relative
