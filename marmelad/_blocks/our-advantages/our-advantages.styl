.our-advantages
    flex none
    
    &__section
        padding-top 120px
        padding-bottom 130px

        @media (max-width 1024px)
            padding-top 50px
            padding-bottom 50px

    &__head
        width 860px
        max-width 100%
        margin 0 auto 50px

        @media (max-width 767px)
            margin-bottom 25px

    &__title
        font-size 48px
        color #333333   
        font-weight 400
        line-height 1.1
        text-align center
        margin-top 0
        margin-bottom 45px

        @media (max-width 767px)
            font-size 36px
            margin-bottom 25px

    &__desc
        font-size 14px
        color #000
        font-weight 400
        line-height 1.2

        p
            margin-top 0
            margin-bottom 15px

    &__items
        display flex
        justify-content center
        margin-left -40px
        margin-bottom 50px

        @media (max-width 959px)
            flex-wrap wrap

    &__item
        flex 0 0 18%
        width 18%
        max-width 18%
        padding-left 40px    
        display flex        
        justify-content center

        @media (max-width 959px)
            flex 0 0 30%
            width 30%
            max-width 30%
            margin-bottom 25px
            &:last-child
                margin-bottom 0

        @media (max-width 639px)
            flex 0 0 50%
            width 50%
            max-width 50% 

        @media (max-width 479px)    
            flex none
            width 100%
            max-width 100% 

    &__body
        display flex
        flex-direction column    
    
    &__icon
        width 120px
        height 120px
        text-align center
        margin 0 auto
        border-radius 50%
        box-shadow 10px 10px 50px rgba(143, 210, 243, 0.2)
        margin-bottom 20px
        position relative

        img
            position relative
            top 50%
            left 0
            transform translateY(-50%)

    &__name
        font-size 18px
        color #333
        font-family : $headings-font
        font-weight 400
        line-height 1.1
        text-align center
        width 170px
        max-width 100%
        margin 0 auto

    &__bottom
        width 510px
        max-width 100%  
        margin 0 auto

    &__notice
        font-size 11px
        color #333    
        font-weight 400
        line-height 13px
        text-align center        