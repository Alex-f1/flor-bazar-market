        background-repeat no-repeat
        background-size contain
        top 10px
        right 10px
        width 16px
        height 16px


// .form-default
input[type=text],
input[type=email]
    font-size 14px
    color #333
    font-weight 400
    line-height 1.1
    width 100%
    padding 7px 10px
    outline none
    border 1px solid #E0E0E0

::placeholder
    font-size 13px
    color #BDBDBD
    font-weight 400
    line-height 1.1

textarea
    width 100%
    max-width 100%
    padding 12px 15px
    border 1px solid #E0E0E0
    min-height 125px
    padding 12px 15px    
    outline none

.btn-up
    display flex
    flex-direction column
    justify-content center
    align-items center
    width 50px
    height 50px
    padding 0
    position fixed
    right 7%
    bottom 100px
    background-color #D3B3BC
    border none
    border-radius 50%
    z-index 5
    display none
    transition background-color .3s
    cursor pointer
    &:hover
        background-color #6E031F

    .svg-icon
        fill transparent    
        transform translateY(-3px)
    
    @media (max-width 1023px)
        right 15px
        bottom 15px

.jq-selectbox
    width 100%

    &.opened
        
        .jq-selectbox__trigger-arrow
            transform rotate(0)

    .jq-selectbox__select
        padding 7px 10px
        outline none
        border 1px solid #E0E0E0

    .jq-selectbox__select-text
        font-size 13px
        color #D2D2CA
        font-weight normal
        line-height 1.1

    .jq-selectbox__trigger
        position absolute
        top 10px
        right 10px    

    .jq-selectbox__trigger-arrow
        width 14px
        height 8px
        background-image: svg-load('img/arr-top.svg', stroke\=#1B110F)  
        background-repeat no-repeat
        background-size contain
        transform rotate(180deg)
        transition transform .3s

    .jq-selectbox__dropdown
        background-color #fff
        border 1px solid #E0E0E0
        width 100%
        padding 10px

        ul
            padding-left 0
            margin 0

            li
                font-size 14px
                color #333
                font-weight normal
                line-height 1.1
                margin-bottom 10px
                
                &:hover
                    color #6e031f