input[type=text],
input[type=email]
    font-size 14px
    color #333
    font-weight 400
    line-height 1.1
    width 100%
    height 25px
    border none
    border-bottom 1px solid #A79186    

::placeholder
    font-size 14px
    color #A79186
    font-weight 400
    line-height 1.1

textarea
    font-size 14px
    color #333
    font-weight 400
    line-height 1.1
    padding 12px
    border 1px solid #A79186    
    width 100%
    min-height 80px

.btn-up
    display flex
    flex-direction column
    justify-content center
    align-items center
    width 50px
    height 50px
    padding 0
    position fixed
    right 7%
    bottom 100px
    background-color #D3B3BC
    border none
    border-radius 50%
    z-index 5
    display none
    transition background-color .3s
    cursor pointer
    &:hover
        background-color #6E031F

    .svg-icon
        fill transparent    
        transform translateY(-3px)
    
    @media (max-width 1023px)
        right 15px
        bottom 15px