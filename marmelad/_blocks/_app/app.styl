html,
body
    margin 0
    padding 0

    &.is-scroll-hide
        overflow hidden

html
    min-height 100%
    min-height 100vh

.app
    display flex
    flex-direction column
    height 100%
    height 100vh

    &__wrapper
        display flex
        flex-direction column
        min-height 100%
        min-height 100vh

    &__content
        display flex
        flex 1 0 auto

    &__main
        flex 1

img
    max-width 100%
    height auto        

h1, h2, h3, h4, h5, h6
    font-family : $headings-font
    font-weight 400

.contain-full
    width 1920px
    max-width 100%
    margin 0 auto 

.contain
    width 1165px + 15px + 15px
    max-width 100%  
    margin 0 auto
    padding-right 15px
    padding-left 15px

.btn-general
    font-size 14px
    color #D2D2CA
    font-weight normal
    line-height 1.2
    text-transform uppercase
    text-decoration none
    text-align left
    padding 20px 30px
    background-color #6E031F
    border none
    display inline-block
    min-width 280px
    position relative
    cursor pointer
    transition background-color .3s
    &:after
        content ''
        position absolute
        top 50%
        right 30px
        width 10px
        height 20px
        transform translateY(-50%)
        background-image url("data:image/svg+xml,%3Csvg width='10' height='18' viewBox='0 0 10 18' fill='none' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath d='M1 17L9 9L1 1' stroke='%23D2D2CA'/%3E%3C/svg%3E%0A")
        background-repeat no-repeat

    &:hover
        background-color lighten(#6E031F, 10%)   