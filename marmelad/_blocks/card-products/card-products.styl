.card-products
    flex none

    h1
        @media (max-width 959px)
            display none

    &__main
        display flex
        margin-bottom 120px

        @media (max-width 959px)
            flex-direction column
            align-items center
            margin-bottom 50px
    
    &__mobile-title
        display none
        @media (max-width 959px)
            margin-bottom 0        
            display block !important
    
    &__info    
        padding-top 20px

        @media (max-width 959px)
            order 1
            margin-top 25px

        @media (max-width 767px)
            width 100%    

    &__preview
        flex 0 0 425px
        width 425px
        max-width 425px
        margin-right 105px

        @media (max-width 1023px)
            margin-right 50px

        @media (max-width 959px)
            flex none
            order 1
            margin-top 50px  

        @media (max-width 639px)
            max-width 100%    
            margin-right auto
            margin-left auto

    &__prices
        margin-bottom 30px        

    &__current-price
        font-size 36px
        color #1B110F
        font-weight 400
        line-height 1.1

    &__old-prace
        font-size 24px
        color #D2D2CA
        font-weight 400
        line-height 1.1
        text-decoration line-through
        margin-left 8px

    &__handling
        display flex
        margin-bottom 55px

        @media (max-width 479px)
            display block

        .amount
            width 100px
            height 60px
            margin-right 15px

            @media (max-width 479px)
                margin-bottom 15px
                margin-right 0

            &__btn-amount
                flex 0 0 34px
                width 34px
                max-width 34px
                height 60px

            input 
                font-size 16px 
                flex 0 0 30px
                width 30px
                max-width 30px
                height 55px

    &__btn-add-to-cart

        &--out
            pointer-events none
            color #A79186
            background-color #d2d2ca
            &:hover
                background-color lighten(#d2d2ca, 15%)

            &:after
                background-image url("data:image/svg+xml,%3Csvg width='10' height='18' viewBox='0 0 10 18' fill='none' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath d='M1 17L9 9L1 1' stroke='%23A79186'/%3E%3C/svg%3E%0A")

        &--in-cart
            color #A79186
            display flex
            align-items center
            padding-top 17px
            padding-bottom 17px
            border 1px solid #A79186
            background-color transparent
            transition border-color .3s, color .3s

            &:hover
                color #6E031F
                border-color #6E031F
                background-color transparent

                .svg-icon--completed-icon
                    fill #6E031F
                &:after
                    background-image url("data:image/svg+xml,%3Csvg width='10' height='18' viewBox='0 0 10 18' fill='none' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath d='M1 17L9 9L1 1' stroke='%236E031F'/%3E%3C/svg%3E%0A")

            .svg-icon--completed-icon
                margin-right 12px
                .svg-icon__link
                    fill transparent

            &:after
                background-image url("data:image/svg+xml,%3Csvg width='10' height='18' viewBox='0 0 10 18' fill='none' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath d='M1 17L9 9L1 1' stroke='%23A79186'/%3E%3C/svg%3E%0A")

    &__checkout-order
        display none
        position relative

    &__notice
        font-size 12px
        color #A79186
        font-weight 400
        line-height 1.1
        position absolute
        bottom -20px
        left 0